<div class="slide-out-bg"></div>
<div class="slide-out">
  <div class="slide-out-card">
    <LinkTo @route="book" class="btn-back">
      <div class="sr-only">Back</div>
    </LinkTo>

    <div class="slide-out-heading">
      <div class="title">
        <h3>{{@model.title}}</h3>

        <div class="actions">
          <LinkTo @route="book.edit" @model={{@model.id}} class="btn-pop">
            edit
          </LinkTo>
          <button
            class="btn-recessed"
            type="button"
            {{on "click" this.destroy}}
          >
            delete
          </button>
        </div>
      </div>

      <div class="details">
        <p>
          <strong>Author:</strong>
          <<LinkTo @route="author.detail" @model={{@model.author.id}}>
            {{@model.author.last}}, {{@model.author.first}}
          </LinkTo>
        </p>
        <p>
          <strong>Publish Date:</strong>
          {{@model.publishDate}}
        </p>
        <p>
          <strong>ISBN:</strong>
          {{@model.isbn}}
        </p>
      </div>
    </div>

    <div class="slide-out-content">
      {{outlet}}
    </div>
  </div>
</div>