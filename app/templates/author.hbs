{{page-title "Author"}}

<div class="panel-heading">
  <div class="search">
    <input type="text" placeholder="Search by Author Name">
  </div>

  <a href>
    <div class="sr-only">Add New Author</div>
  </a>
</div>

<div class="panel-content">
  <h3 class="panel-title">Authors</h3>

  <ul class="collection">
    {{#each @model.data as |author|}}
      <li>
        <AuthorListItem @first={{author.attributes.first}} @last={{author.attributes.last}} />
      </li>
    {{/each}}
  </ul>
</div>